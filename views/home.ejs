<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Tasks</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="home-page">
    <nav style="background: #333; padding: 10px; text-align: center;">
        <a href="/home" style="color: white; margin: 0 10px;">Home</a>
        <a href="/cart" style="color: white; margin: 0 10px;">Cart</a>
        <a href="/orders" style="color: white; margin: 0 10px;">Orders</a>
        <a href="/checkout" style="color: white; margin: 0 10px;">Checkout</a>
        <a href="/logout" style="color: white; margin: 0 10px;">Logout</a>
    </nav>
    
    
    <a href="/logout" class="btn logout">Logout</a>
    <div class="container">
        <header>
            <h1>Hello, <%= user.email %>!</h1>
        </header>

        <a href="/add-product">Add Product</a>

        <h2>All Your Products</h2>
        <ul>
        <% products.forEach(product => { %>
            <li>
                <h3><%= product.title %> - â‚¹<%= product.price %></h3>
                <p><%= product.description %></p>
                <img src="<%= product.imageUrl %>" width="100">

                <!-- Add to Cart Button -->
                <form action="/add-to-cart" method="POST" style="margin-top: 10px;">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <button type="submit">Add to Cart</button>
                </form>
            </li>
        <% }) %>
        </ul>

    </div>
</body>
</html>
